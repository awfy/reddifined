{

  "manifest_version":           2,

  "name":                       "Reddifined",
  "description":                "Redefining how Reddit looks.",
  "version":                    "1.0.0",

  "icons": {
                                "16": 		"assets/imgs/icons/small.png",
                                "48": 		"assets/imgs/icons/medium.png",
                                "128": 		"assets/imgs/icons/large.png"
  },

  "page_action": {
                                "default_icon": {
                                                     "19": "assets/imgs/icons/page-small.png"
                                },

                                "default_title":	   "Reddifined for Reddit"
  },

  "permissions": [
                                "tabs", "http://*.reddit.com/*"
  ],

  "content_scripts": [ {
                                "matches":		        [ "http://*.reddit.com/*", "https://*.reddit.com/*" ],
                                "run_at":             [ "document_start" ],
                                "css":				        [ "assets/styles/style.css" ],
                                "js":				          [ "assets/scripts/app.js" ]

  }]

}